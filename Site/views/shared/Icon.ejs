<%
  // Props: imageSrc, name, topLeft?, size?, link?
  const iconSize = size || 100;
%>
<a href="<%= link || '#' %>" style="text-decoration: none; color: inherit;">
  <div style="position: relative; width: <%= iconSize %>px; height: <%= iconSize + 20 %>px; text-align: center;">
    <% if (topLeft) { %>
      <div style="position: absolute; top: 0; left: 0; background: rgba(0,0,0,0.7); color: white; padding: 2px 6px; font-size: 12px;">
        <%= topLeft %>
      </div>
    <% } %>
    <div style="width: <%= iconSize %>px; height: <%= iconSize %>px; overflow: hidden; border-radius: 8px; border: 1px solid #ccc;">
      <img src="<%= imageSrc %>" alt="<%= name %>" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
    <div style="margin-top: 4px; font-size: 14px;"><%= name %></div>
  </div>
</a>
