<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>404 | User Not Found</title>
</head>

<body style="font-family:sans-serif;margin:0;padding:0;">
  <!-- main nav -->
  <%- include('../shared/Header') %>

  <main style="padding:2rem;max-width:600px;margin:auto;text-align:center;">
    <h1 id="user404msg"
        style="font-weight:600;font-size:1.5rem;margin:0;">
      <!-- fallback if JS disabled -->
      404, user <%= typeof pageUserId !== 'undefined' ? pageUserId : '' %> was not found!
    </h1>
  </main>

  <!-- overwrite message with the session-bound ID (safer) -->
  <script>
    StaticState(({ DynamicEJSelements, session }) => {
      const [msg] = DynamicEJSelements('user404msg');
      const id = session.pageUserId || '<unknown>';
      msg.set({ text: `404, user ${id} was not found!` });
    });
  </script>
</body>
</html>
